{
    "name": "mc-xyz-capture",
    "version": "1.0.0",
    "description": "Automatically uploads Minecraft screenshots.",
    "main": "main.js",
    "author": "Your Name",
    "scripts": {
        "start": "electron .",
        "predist": "rimraf dist",
        "dist": "electron-builder --publish=never"
    },
    "devDependencies": {
        "electron": "^31.0.0",
        "electron-builder": "^24.13.3",
        "rimraf": "^5.0.7"
    },
    "build": {
        "appId": "com.yourname.mcxyzcapture",
        "productName": "MC XYZ Capture",
        "files": [
            "main.js",
            "index.html",
            "renderer.js",
            "style.css",
            "icon.ico"
        ],
        "win": {
            "target": "nsis",
            "icon": "icon.ico"
        }
    }
}